                        	<Kinetic>0.0</Kinetic>
                        	<Heat>0.15</Heat>
                        	<EM>0.1</EM>
                        </BasicEffectConfiguration>
                        <!-- global modifier for armor defense (attack minus defense).-->
                        <ArmorEffectConfiguration>
                        	<Kinetic>0.1</Kinetic>
                        	<Heat>0.0</Heat>
                        	<EM>0.15</EM>
                        </ArmorEffectConfiguration>						
				</BasicValues>
